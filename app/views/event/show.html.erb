<%= render 'shared/header' %>
<div class="cp-wrap">
  <div class="cp-card" style="text-align: center">
    <h1>Event: <%= @event.name %></h1>
  </div>

  <div class="cp-card">
    <div style="display: flex; justify-content: space-between; align-items: center">
      <div>Live ID: <span class="subtitle-color" style="font-weight: bold; font-variant: all-small-caps;"><%= @event.live_id %></span></div>
      <div>
        <a href="/live/<%= @event.live_id %>" target="_blank" class="btn btn-primary">
          <strong>
            View
          </strong>
        </a>
      </div>
    </div>
    <hr/>
    <div>
      <%= form_for @event, :url => { :action => "update" }, remote: false do |f| %>
        <%= f.hidden_field :id, :value => @event.id %>
        <label>Livepeer URL</label>
        <%= f.text_field :stream_url, value: @event.stream_url %>
        <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="cp-small-light-text">
      Expected URL format: https://cdn.livepeer.com/hls/274ecn88f1pocum0/index.m3u8
    </div>
  </div>


  <div>
    <%= link_to 'Back', authenticated_root_path, class: "btn btn-primary" %>
  </div>
</div>